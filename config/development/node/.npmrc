# NPM Configuration
# Global npm settings for Node.js development

# Registry settings
registry=https://registry.npmjs.org/

# Security settings
audit-level=moderate
fund=false

# Performance settings
prefer-offline=true
cache-max=86400000
progress=true

# Package installation settings
save=true
save-exact=false
save-prefix=^

# Development settings
init-author-name=YOUR_NAME
init-author-email=YOUR_EMAIL
init-license=MIT
init-version=1.0.0

# Global package installation directory
# This will be set by the shell configuration
# prefix=${HOME}/.npm-global

# Logging
loglevel=warn

# Optional: Disable package-lock for faster installs (not recommended for production)
# package-lock=false

# Optional: Use yarn for package management
# package-manager=yarn

# Optional: Enable strict SSL (recommended)
strict-ssl=true

# Optional: Set timeout for package downloads
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
