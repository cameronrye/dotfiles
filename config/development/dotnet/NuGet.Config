<?xml version="1.0" encoding="utf-8"?>
<!-- NuGet Configuration for .NET Development -->
<configuration>
  <packageSources>
    <!-- Official NuGet package source -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Microsoft package source -->
    <add key="Microsoft Visual Studio Offline Packages" value="C:\Program Files (x86)\Microsoft SDKs\NuGetPackages\" />
    
    <!-- Optional: Add your organization's private package source -->
    <!-- <add key="MyOrg" value="https://pkgs.dev.azure.com/myorg/_packaging/myfeed/nuget/v3/index.json" /> -->
  </packageSources>
  
  <packageSourceCredentials>
    <!-- Credentials for private package sources -->
    <!-- <MyOrg>
      <add key="Username" value="myusername" />
      <add key="ClearTextPassword" value="mypassword" />
    </MyOrg> -->
  </packageSourceCredentials>
  
  <config>
    <!-- Global packages folder -->
    <add key="globalPackagesFolder" value="~/.nuget/packages" />
    
    <!-- HTTP cache folder -->
    <add key="http_cache" value="~/.nuget/v3-cache" />
    
    <!-- Plugins cache folder -->
    <add key="plugins_cache" value="~/.nuget/plugins-cache" />
    
    <!-- Default push source -->
    <add key="defaultPushSource" value="https://api.nuget.org/v3/index.json" />
    
    <!-- Signature validation mode -->
    <add key="signatureValidationMode" value="require" />
  </config>
  
  <trustedSigners>
    <!-- Trust Microsoft packages -->
    <author name="Microsoft">
      <certificate fingerprint="3F9001EA83C560D712C24CF213C3D312CB3BFF51EE89435D3430BD06B5D0EECE" hashAlgorithm="SHA256" allowUntrustedRoot="false" />
    </author>
    
    <!-- Trust NuGet.org packages -->
    <repository name="nuget.org" serviceIndex="https://api.nuget.org/v3/index.json">
      <certificate fingerprint="0E5F38F57DC1BCC806D8494F4F90FBCEDD988B46760709CBEEC6F4219AA6157D" hashAlgorithm="SHA256" allowUntrustedRoot="false" />
    </repository>
  </trustedSigners>
  
  <packageManagement>
    <!-- Format for package management -->
    <add key="format" value="1" />
    <add key="disabled" value="False" />
  </packageManagement>
  
  <disabledPackageSources>
    <!-- Disabled package sources -->
  </disabledPackageSources>
  
  <activePackageSource>
    <!-- All package sources are active -->
    <add key="All" value="(Aggregate source)" />
  </activePackageSource>
</configuration>
